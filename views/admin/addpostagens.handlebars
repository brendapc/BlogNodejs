{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Nova postagem</h4>
        <form action="/admin/postagens/new" method="POST">
            <label for="titulo">Título:</label>
            <input type="text" name="titulo" class="form-control" required>
            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control" required>
            <label for="descricao">Descrição Breve:</label>
            <input type="text" name="descricao" class="form-control" required>
            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" id="conteudo" cols="30" rows="10" class="form-control"></textarea>
            <label for="categoria">Categoria:</label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">nehuma categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-4">Criar Postagem</button>
        </form>
    </div>
</div>